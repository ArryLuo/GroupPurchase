<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="轮播图片" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_weight="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特价(限时抢购)" />

            <DigitalClock
                android:id="@+id/digital_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/catergory_mobile" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
             >

            <ImageView
                android:id="@+id/color_shopping_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/color_shopping_gap_line" />

            <ImageView
                android:id="@+id/color_shopping_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_shopping_line1"
                android:src="@drawable/color_shopping_gap_line" />

            <TextView
                android:id="@+id/t_frist_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="首发"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t_first_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_frist_start"
                android:layout_toRightOf="@+id/t_frist_start"
                android:text="小米5需热来袭" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textSize="16sp"
                android:id="@+id/t_brand"
                android:layout_below="@+id/t_first_content"
                android:layout_toLeftOf="@+id/t_first_content"
                android:layout_marginTop="10dp"
                />
            <TextView 
                android:id="@+id/t_brand_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌内容"
                android:layout_toRightOf="@+id/t_brand"
                android:layout_below="@+id/t_brand"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/t_mobile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机通讯"
            android:layout_marginTop="10dp"
            />
        <TextView 
            android:id="@+id/t_comput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电脑数码"
            android:layout_below="@+id/t_mobile_phone"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:id="@+id/t_household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家用电器"
            android:layout_below="@+id/t_comput"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
</LinearLayout>